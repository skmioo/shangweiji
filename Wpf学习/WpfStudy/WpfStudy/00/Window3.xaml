            <Label Content="Label" Width=" 40" Margin="0,10,0,0"/>
            <Button Content="Button" Width="60" Margin="5,10,0,0" HorizontalAlignment="Left"/>
            <Button Content="Button" MinWidth="20"  Width="60" Margin="0,10,0,0"/>
            <Button Content="Button" Width="60" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
