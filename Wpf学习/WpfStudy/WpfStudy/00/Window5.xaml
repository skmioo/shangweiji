    <DockPanel LastChildFill="True">
        <Button Content="Button2" Height="40" DockPanel.Dock="Top" />
        <Button Content="Button5" Height="40" DockPanel.Dock="Bottom" />
        <Button Content="Button1" DockPanel.Dock="Left" Width="75"/>
        <Button Content="Button3"  DockPanel.Dock="Right"  Width="75"/>
